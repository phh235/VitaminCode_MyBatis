<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.vitamincode.vitamincode_be.mapper.ClassesMapper">    <sql id="ColumnClass">        class_id, class_name, class_description    </sql>    <resultMap id="ClassesResultMap" type="com.vitamincode.vitamincode_be.entity.Classes">        <id column="class_id" property="classId"/>        <result column="class_name" property="className"/>        <result column="class_description" property="classDescription"/>    </resultMap>    <select id="findAllClasses" resultMap="ClassesResultMap">        SELECT        <include refid="ColumnClass"/>        FROM classes    </select>    <select id="findClassByClassName" resultMap="ClassesResultMap">        SELECT        <include refid="ColumnClass"/>        FROM classes        WHERE class_name LIKE CONCAT('%', #{className}, '%')    </select>    <select id="findClassById" resultMap="ClassesResultMap">        SELECT        <include refid="ColumnClass"/>        FROM classes        <where>            <if test="classId != null">                class_id = #{classId}            </if>        </where>        WHERE class_id = #{classId}    </select>    <insert id="insertClass">        INSERT INTO classes (class_name, class_description)        VALUES (#{classEntity.className}, #{classEntity.classDescription});    </insert>    <update id="updateClass">        UPDATE classes        SET class_name        = #{classEntity.className},            class_description = #{classEntity.classDescription}        WHERE class_id = #{classEntity.classId};    </update>    <delete id="deleteClass">        DELETE        FROM classes        WHERE class_id = #{classId};    </delete>    <select id="isExist" parameterType="Integer" resultType="boolean">        SELECT EXISTS(SELECT 1 FROM classes WHERE class_id = #{classId})    </select></mapper>